<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HandyScreenshot.Controls">

    <Style TargetType="{x:Type controls:RectCanvas}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RectCanvas}">
                    <Grid>
                        <Canvas>
                            <Border x:Name="PART_ClipRect"
                                    Background="Transparent"
                                    BorderThickness="2"
                                    BorderBrush="#29c1fb" />
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>