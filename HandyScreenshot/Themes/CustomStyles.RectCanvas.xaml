<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HandyScreenshot.Controls">

    <Style TargetType="{x:Type controls:RectCanvas}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RectCanvas}">
                    <Canvas>
                        <Border Canvas.Left="{Binding Path=ClipRect.X, RelativeSource={RelativeSource TemplatedParent}}"
                                Canvas.Top="{Binding Path=ClipRect.Y, RelativeSource={RelativeSource TemplatedParent}}"
                                Width="{Binding Path=ClipRect.Width, RelativeSource={RelativeSource TemplatedParent}}"
                                Height="{Binding Path=ClipRect.Height, RelativeSource={RelativeSource TemplatedParent}}"
                                Background="Transparent"
                                BorderThickness="2"
                                BorderBrush="Red" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>